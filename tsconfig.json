{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "types": ["node", "vite/client", "vitest/globals"],
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": [
    "./**/*.ts",
    "*.json",
    "*.js",
    "*.ts",
    "./typings/*.d.ts",
    "./node_modules/vitest/*.d.ts",
    "./node_modules/vitest/*.d.cts"
  ],
  "exclude": [
    ".github",
    ".husky",
    ".vercel",
    "node_modules",
    "dist",
    "vite.config.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
