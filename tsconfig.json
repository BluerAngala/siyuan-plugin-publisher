{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "types": ["node", "vite/client", "vitest/globals"],
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": [
    "~/**/*.ts",
    "~/**/*.d.ts",
    "~/**/*.tsx",
    "~/**/*.vue",
    "node_modules/vitest/globals.d.ts",
    "*.json",
    "*.js",
    "*.ts"
  ],
  "exclude": [".github", ".husky", ".vercel", "node_modules", "dist"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
